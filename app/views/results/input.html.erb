<h1>Update</h1>

<%= form_with(model: @result, url: 'input') do |f| %>
  <div class="form-group">
    <%= f.label :game %>
    <%= f.number_field :game, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :score1 %>
    <%= f.number_field :score1, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :score2 %>
    <%= f.number_field :score2, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :point1 %>
    <%= f.number_field :point1, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :point2 %>
    <%= f.number_field :point2, class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.submit "更新", class: 'btn btn-block btn-primary form-control' %>
  </div>
<% end %>
